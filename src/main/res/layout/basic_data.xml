<include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/co2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_textview"
                android:gravity="center"
                android:text="co2" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wendu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_textview"
                android:gravity="center"
                android:text="温度" />
            <TextView
                android:id="@+id/shidu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_textview_blue"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="湿度" />
            <TextView
                android:id="@+id/huojing"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_textview"
                android:gravity="center"
                android:text="火警" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/youdu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_textview"
                android:gravity="center"
                android:text="有毒气体" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"

            >

            <TextView

                android:id="@+id/weizhi1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_textview_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="未知" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            >

            <TextView

                android:id="@+id/weizhi2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_textview_red"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="待定" />

        </LinearLayout>


    </LinearLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#f756a123"
            card_view:cardCornerRadius="10dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="10dp">
            <TextView
                android:id="@+id/shuaxin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="刷新数据"
                android:textColor="#FFFFFF"

                />
        </android.support.v7.widget.CardView>
    </LinearLayout>



</LinearLayout>
